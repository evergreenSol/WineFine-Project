      <script>
        $(function(){
 
	         // 버튼 클릭 시 css function 
	         $(".typeBtn").click(function(){
	             $(this).css("background", "purple");
	             $(this).siblings().css("background", "white");
	         });
	         
	         // 타입별 보여주기 function 
	         var winetype = $("#winetype").val();
	 
	           $("#type1").click(function(){
	                     $(".forRed").css("display","block");
	                     $(".forWhite").css("display","none");
	                     $(".forSparkling").css("display","none");
	 
	           });
	 
	           $("#type2").click(function(){
	                     $(".forRed").css("display","none");
	                     $(".forWhite").css("display","block");
	                     $(".forSparkling").css("display","none");
	           });
	           
	           $("#type3").click(function(){
                   $(".forRed").css("display","none");
                   $(".forWhite").css("display","none");
                   $(".forSparkling").css("display","block");
         		});
	           
	           $("#type4").click(function(){
	                     $(".forRed").css("display","block");
	                     $(".forWhite").css("display","block");
	                     $(".forSparkling").css("display","block");
	           });
	        
	           // 썸네일 클릭 시 해당 상품번호 페이지로 넘기기 function
	            $(".Pthumbnail").click(function(){
	                var pno = $(this).children().eq(0).val();
	 
	                location.href="<%=contextPath%>/store.pr?pno="+pno;
	            });
        });
    </script>
